public void animateFadingOut(){
	
	FadeAnimation anim = new FadeOutAnimation(this, 5000, new Callable<Void>() {
	@Override
	public Void call() throws Exception {
			System.out.println("finished here!");
			return null;
		}
	});
	anim.play();
	new Thread(() -> {
		try {
			Thread.sleep(1000);
			anim.pause();
			Thread.sleep(1000);
			anim.play();
			Thread.sleep(2000);
			anim.abort();
		} catch (Exception e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		
	}).start();
}